<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>User List</title>
    <link rel="stylesheet" href="/main.css">
</head>
<body>
    <h1>User List</h1>
    <% if (Array.isArray(users) && users.length) { %>
        <table class="book-list">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.username %></td>
                    <td><%= user.firstname %></td>
                    <td><%= user.lastname %></td>
                    <td><%= user.email %></td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>No users found.</p>
    <% } %>

    <p><a href="/">Back to home</a></p>
</body>
</html>
